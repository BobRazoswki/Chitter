<!-- Display peeps -->
<ul>
		<% @peeps.each do |peep| %>
			<li class="peep">
				<article class="peep_container">
					<section class="message">
						<strong>@<%= peep.user.user_handle %></strong> 
						</br>
						<%= peep.message %>
					</section>
						<span class='source'>
	   			  	<strong>Added by</strong> <%= peep.user.name %>
							<strong>at</strong> <%= peep.timestamp %>
	  				</span>
	
				<!-- Display replies -->
						<% if peep.replies != nil %>
							<% peep.replies.each do |reply| %> 
							<p class="reply">
								<article class="reply_container">
									<section class="message">
										<strong>@<%= reply.user.user_handle %></strong> 
											</br>
										<%= reply.message %>
									</section>
									<span class='source'>
					  				<strong>Added by</strong> <%= reply.user.name %>
										<strong>at</strong> <%= reply.timestamp %>
									</span>
								</article>
							</p>
					</article>
					<% end %>
			<% end %>

							<!-- New reply -->
				<% if current_user %> 
					<section id="new-reply">
						<form  action="/replies/<%= peep.id %>/<%= current_user.id %>" method="post">
							<input class="reply" type="text" name="message" placeholder="Reply now !">
							<button class="reply_button" type="submit" value="reply">Reply!</button>
						</form>
					</section>
				<% end %>

			</li>
		<% end %>
</ul>